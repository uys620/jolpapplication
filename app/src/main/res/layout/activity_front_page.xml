<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_contetns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_margin="10dp"
            android:background="@drawable/make_round"
            android:layout_weight="6">

            <Button
                android:id="@+id/my_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmy_post" />

            <Button
                android:id="@+id/my_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmy_reply" />

            <Button
                android:id="@+id/my_dm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내게 온 쪽지" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="10dp"
            android:background="@drawable/make_round"
            android:layout_weight="6">

            <Button
                android:id="@+id/market_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/t_market_board" />

            <Button
                android:id="@+id/free_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/t_free_board" />
        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:menu="@menu/menu_bottom"
            android:layout_weight="1">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>